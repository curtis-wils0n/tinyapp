<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/">
      <img src="/public/images/hamster.svg" alt="A tiny mobile home" width="40" height="40">
      TinyApp
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div> 
    </div>
    <% if (user !== undefined) { %>
      <p class="navbar-nav nav-item nav-link" style="float: right; color: rgba(255, 255, 255, 0.5);">Logged in as: <%= user.email %></p>
      <form action="/logout" method="POST" style="float: right">
        <button type="submit" class="btn btn-outline-dark" style="float: right; margin-left: 10px">Logout</button>
      </form>
    <% } else { %>
      <a href="/register" type="button" class="btn btn-outline-dark" style="float: right; margin-left: 10px">Register</a>
      <a href="/login" type="button" class="btn btn-outline-dark" style="float: right; margin-left: 10px">Login</a>
    <% } %> 
  </nav>
</header>